{{>nav-bar}}
<main class="container">
    <section class="column">
        <h1 class="title is-1 has-text-centered">Closet</h1>
    </section>
    <section class="columns">

        <div class="column is-6">


            {{!-- garment goes here --}}

            <article class="panel is-dark">
                <p class="panel-heading">
                    Graments View
                </p>
                <p class="panel-tabs">
                    <a class="garment-view">All</a>
                    <a class="garment-view" data-name="Hats">
                        <span class="icon is-small">
                            <i class="fas fa-hat-cowboy" aria-hidden="true"></i>
                        </span>
                        <span>Hats</span>
                    </a>
                    <a class="garment-view" data-name="Top">
                        <span class="icon is-small">
                            <i class="fas fa-tshirt" aria-hidden="true"></i>
                        </span>
                        <span>Top</span>
                    </a>
                    <a class="garment-view" data-name="Pants">
                        <i class="fas fa-drumstick-bite" aria-hidden="true"></i>
                        </span>
                        <span>Pants</span>
                    </a>
                    <a class="garment-view" data-name="Shoes">
                        <span class="icon is-small">
                            <i class="fas fa-shoe-prints" aria-hidden="true"></i>
                        </span>
                        <span>Shoes</span>
                    </a>
                    <a class="garment-view" data-name="Outerwear">
                        <i class="fas fa-user-secret" aria-hidden="true"></i>
                        </span>
                        <span>Outerwear</span>
                    </a>


                </p>



                {{#each garments}}
                <a class="panel-block">
                    {{!-- will be a shirt partial --}} {{name}}
                    <span class="panel-icon add-icon">
                        <i class="fas fa-plus" aria-hidden="true" data-id={{id}}></i>
                    </span>
                    <span class="panel-icon">
                        <i class="fas fa-trash-alt" aria-hidden="true" data-id={{id}}></i>
                    </span>
                </a>
                {{/each}}


            </article>

    </section>

</main>

<script src="/assets/js/view-closet.js" async defer></script>
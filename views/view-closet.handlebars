{{>nav-bar}}
<main id="garamondText" class="container">
  <section class="column">
    <h1 id="garamondTitle" class="title is-1 has-text-centered">Closet</h1>
  </section>
  <section class="columns">
    <div class="column is-6">
      {{!-- garment goes here --}}

      <article class="panel has-text-grey-dark">
        <p class="panel-heading has-text-centered">Garments View</p>
        <p class="panel-tabs">
          <a class="garment-view has-text-black-ter">All</a>
          <a class="garment-view has-text-black-ter" data-name="Hats">
            <span class="icon is-small">
              <i class="fas fa-hat-cowboy" aria-hidden="true"></i>
            </span>
            <span>Hats</span>
          </a>
          <a class="garment-view has-text-black-ter" data-name="Shirt">
            <span class="icon is-small">
              <i class="fas fa-tshirt" aria-hidden="true"></i>
            </span>
            <span>Shirt</span>
          </a>
          <a class="garment-view has-text-black-ter" data-name="Pants">
            <i class="fas fa-drumstick-bite" aria-hidden="true"></i>
            <span>Pants</span>
          </a>
          <a class="garment-view has-text-black-ter" data-name="Shoes">
            <span class="icon is-small">
              <i class="fas fa-shoe-prints" aria-hidden="true"></i>
            </span>
            <span>Shoes</span>
          </a>
          <a class="garment-view has-text-black-ter" data-name="Outerwear">
            <i class="fas fa-user-secret" aria-hidden="true"></i>
            <span>Outerwear</span>
          </a>
        </p>


        {{#each garments}}
        <a class="panel-block">
          {{!-- will be a shirt partial --}}
          <div class="column">{{name}}</div>
          <div class="column">
            <span class="panel-icon add-icon is-pulled-right">
              <i
                class="fas fa-plus"
                aria-hidden="true"
                data-id="{{id}}"
                data-name="{{name}}"
              ></i>
            </span>
            <span class="panel-icon is-pulled-right">
              <i
                class="fas fa-trash-alt"
                aria-hidden="true"
                data-id="{{id}}"
              ></i>
            </span>
            <span class="panel-icon is-pulled-right">
              <i
                class="fas fa-user-edit"
                aria-hidden="true"
                data-id="{{id}}"
              ></i>
            </span>
          </div>
        </a>
        {{/each}}
      </article>
    </div>
    <div class="column">
      <div class="tile is-parent">
        <div class="tile is-child box">
          <p class="title new-outfit has-text-centered">New Outfit</p>
          <div class="tile is-child is-vertical garment-tile">
            <div class="tile is-child box" id="Hats-box"></div>
            <div class="tile is-child box" id="Shirts-box"></div>
            <div class="tile is-child box" id="Pants-box"></div>
            <div class="tile is-child box" id="Shoes-box"></div>
            <div class="tile is-child box" id="Outerwear-box"></div>
            {{!-- The new outfits goes here --}}
          </div>
          <div class="buttons is-small outfit-buttons">
            <input
              class="button is-small clear-clothes garamondText"
              type="reset"
              value="Put these clothes back"
            />
            <input
              class="button save-outfits garamondText"
              type="submit"
              value="Save this outfit!"
            />

          </div>

        </div>
      </div>
    </div>
  </section>
</main>

<script src="/assets/js/closet-view.js"></script>
